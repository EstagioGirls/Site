{{#if message}}
<div style="text-align: center" class="alert alert-{{message.type}}">
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	<strong>{{message.intro}}</strong> {{message.message}}
</div> 
{{/if}}

<form class="formulario" action="/formulario" method="POST"> 
	<p>Solicite o empréstimo preenchendo o formulário abaixo</p>
	<div class="field">
		<label for="nome">Nome:*</label>
		<input type="text" id="nome" name="nome" placeholder="Digite seu nome*" required>
	</div>
	<div class="field">
		<label for="curso">Curso:</label>
		<input type="text" id="curso" name="curso" placeholder="Digite seu curso">
	</div>
	<div class="field">
		<label for="matricula">Matrícula:</label>
			<input type="text" id="matricula" name="matricula" placeholder="Digite sua matrícula">
	</div>
	<div class="field">
		<label for="email">Email:*</label>
		<input type="email" id="email" name="email" placeholder="Digite seu email*" required>
	</div>
	<div class="field">
		<label for="id">ID do material:*</label>
		<input type="text" id="id" name="id" placeholder="Digite o id do material*" required>
	</div>

	<div class="field">
		<label for="dataemp">Data do empréstimo*:</label>
		<input type="date" id="dataemp" name="dataemp" placeholder="Marque o dia*" required>
	</div>
	<div class="field">
		<label for="horaemp">Horário:*</label>
		<input type="time" id="horaempa" name="horaemp" placeholder="Marque o horário" required>	
	</div>
	<div class="field">
		<label for="datadev">Data da devolução:*</label>
			<input type="date" id="datadev" name="datadev" placeholder="Marque o dia" required>
	</div>
	<div class="field">
		<label for="horadev">Horário:</label>
		<input type="time" id="horadev" name="horadev" placeholder="Marque o horário">
	</div>
		<input type="submit" name="acao" value="Enviar">
</form>